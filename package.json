{
  "name": "enqueuer",
  "version": "3.5.12",
  "description": "Polyglot flow testing tool",
  "main": "js/index.js",
  "scripts": {
    "start": "node js/index.js",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "npm run codeCoverage && npm run singleRunTest && npm run daemonRunTest",
    "unitTest": "jest --silent .test.ts",
    "daemonRunTest": "jest --detectOpenHandles --forceExit .comp.ts",
    "singleRunTest": "nqr conf/singleRun.yml --store zeroMqAddress=tcp://127.0.0.1:3000 < misc/stdin",
    "codeCoverage": "jest --detectOpenHandles --coverage --silent",
    "lint": "node_modules/.bin/tslint --project tsconfig.json",
    "clean": "rm -rf js/ && find ./src -name '*.js' -type f -delete && rm -f temp/*",
    "all": "npm run clean && npm run lint && npm run build && npm link && npm run test",
    "build": "node misc/generate-injectables-list.js src/injectable-files-list.ts src && tsc",
    "docker-build": "docker build -t enqueuer/enqueuer:dev .",
    "docker-run": "docker run --cpus 2 --rm -itd -v $(pwd):/enqueuer -h enqueuer-host --name enqueuer enqueuer/enqueuer:dev /bin/bash",
    "docker-expose-brokers": "docker run --cpus 2 --rm -itd -p 9092:9092 -p 9093:9093 -p 5672:5672 -p 1883:1883 -p 3000:3000 -p 9324:9324 -p 61613:61613 -p 23000:23000 -p 2181:2181 -v $(pwd):/enqueuer -h enqueuer-host --name enqueuer enqueuer/enqueuer:dev /bin/bash",
    "docker-test": "docker run --cpus 2 --rm -it -v $(pwd):/enqueuer -h enqueuer-host --name enqueuer enqueuer/enqueuer:dev /bin/bash -c 'cd enqueuer; node js/index.js conf/singleRun.yml --store zeroMqAddress=tcp://127.0.0.1:3000 < misc/stdin'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lopidio/enqueuer"
  },
  "author": "Virgs",
  "license": "MIT",
  "bin": {
    "enqueuer": "js/index.js",
    "nqr": "js/index.js"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.18.0",
    "conditional-injector": "^1.0.10",
    "express": "^4.16.3",
    "glob": "^7.1.3",
    "json-placeholder-replacer": "^1.0.22",
    "log4js": "^3.0.5",
    "prettyjson": "^1.2.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/amqp": "^0.2.4",
    "@types/express": "^4.16.0",
    "@types/glob": "^7.1.0",
    "@types/jest": "^23.3.2",
    "@types/kafka-node": "^2.0.7",
    "@types/node": "^10.10.1",
    "@types/object-hash": "^1.2.0",
    "@types/prettyjson": "0.0.28",
    "@types/request": "^2.47.1",
    "@types/yamljs": "^0.2.30",
    "@types/zeromq": "^4.6.1",
    "ts-jest": "23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "optionalDependencies": {
    "amqp": "^0.2.7",
    "aws-sdk": "^2.329.0",
    "jest": "^23.6.0",
    "kafka-node": "^3.0.1",
    "mqtt": "^2.18.8",
    "stomp-client": "^0.9.0",
    "zeromq": "^5.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/publishers/**",
      "!src/subscriptions/**"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 75,
        "branches": 65,
        "functions": 65,
        "lines": 75
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.((comp)|(test))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
